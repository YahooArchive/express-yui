<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <title>locator usage of `modown-yui`</title>

</head>
<body>

    <h1>header goes here for the micro template!</h1>

    <p>Tagline: <%= data.tagline %><p>

    <div id="content">
        Loading...
    </div>

    <% Y.Array.each(data.yui_seed, function (seed) { %>
    <script src="<%== seed.src %>"></script>
    <% }); %>

    <script>
    YUI(<%== this.yui_config %>).use('alerts-model', 'node', function (Y) {
        Y.one('#content').setContent('<p>Ready!</p>');
    });
    </script>
</body>
</html>
